{% extends 'cms/corp_site/base.jinja' %}

{% from 'cms/includes/forms.jinja' import render_field %}

{% block main %}
  <h3>{{ _('Edit News Item') }}</h3>

  <form method="post" enctype="multipart/form-data" action="" class="uk-form-stacked" novalidate>
    {{ csrf_input(csrf_token) }}

    {{ render_field(form.headline_en) }}
    {{ render_field(form.headline_fr) }}
    {{ render_field(form.slug) }}
    {{ render_field(form.publish_date) }}
    {{ render_field(form.show_on_corp_site) }}
    {{ render_field(form.show_on_club_site) }}
    {{ render_field(form.photo, news_item.photo) }}
    {{ render_field(form.summary_en) }}
    {{ render_field(form.summary_fr) }}
    {{ render_field(form.content_en) }}
    {{ render_field(form.content_fr) }}

    <input type="submit" class="uk-button uk-button-primary" value="{{ _('Save') }}" />
  </form>
{% endblock %}
