      <span>{{ _('LinkLine Online') }}</span>
    </a>
    {{ image_selector(page, 'mp-linkline-bg') }}
  </div>
{% endblock %}

{% block fourth_bucket %}
  <div style="{% if page.get_image('mp-host-event-bg') %}background-image: url('{{ page.get_image('mp-host-event-bg') }}');{% endif %}">
    <a href="{{ corp_url('events.weddings') }}" target="_blank">
      <span>{{ _('Host My Event') }}</span>
    </a>
    {{ image_selector(page, 'mp-host-event-bg') }}
  </div>
{% endblock %}
