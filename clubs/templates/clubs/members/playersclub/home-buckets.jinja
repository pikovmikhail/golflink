{% extends 'clubs/members/base-home-buckets.jinja' %}

{% block first_bucket %}
  <div style="{% if page.get_image('mp-renewal-options-bg') %}background-image: url('{{ page.get_image('mp-renewal-options-bg') }}');{% endif %}">
    <a href="https://playersclub.clublink.ca/renew-2019/" target="_blank">
      <span>{{ _('Renewal Options') }}</span>
    </a>
    {{ image_selector(page, 'mp-renewal-options-bg') }}
  </div>
{% endblock %}

{% block second_bucket %}
